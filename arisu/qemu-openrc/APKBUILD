pkgname=qemu-openrc
pkgver=0.11.1
pkgrel=14
pkgdesc="OpenRC init scripts for QEMU/KVM"
url="https://github.com/jirutka/qemu-openrc"
arch="noarch"
license="MIT"
depends="qemu socat"
install="$pkgname.pre-install $pkgname.pre-upgrade"
source="https://github.com/jirutka/$pkgname/archive/v$pkgver/$pkgname-$pkgver.tar.gz
	loongarch64.patch
	add-guest-agent-socket.patch
	add-vnc-websocket.patch
	net0-dont-enable-by-default.patch
	add-system-args-override.patch"
options="!check"

package() {
	make install DESTDIR="$pkgdir" prefix=/usr
}

